<Window x:Class="DemoDiplomski.View.AboutView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStartupLocation="CenterScreen"
        Title="Servis" Height="300" Width="350">
    <Grid Margin="10,10,10,10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Image Source="/DemoDiplomski;component/Resources/image/logo.png" Width="120" Height="120"/>
            <StackPanel Orientation="Vertical" VerticalAlignment="Center">
                <TextBlock x:Name="txtAppName" Text="Diplomski"/>
                <TextBlock x:Name="txtVersion" Text="1.0.0.0"/>
                <TextBlock x:Name="txtCopyright" Text="CopyRight"/>
            </StackPanel>
        </StackPanel>
        <Button Content="OK" Grid.Row="1" Grid.Column="0" Padding="5,0,5,0" IsDefault="True" HorizontalAlignment="Center" Click="Button_Click" />
    </Grid>
</Window>
